name: Auto Commit Changes

on:
  push:
    branches:
      - main  # تأكد من أنك تستخدم الفرع الذي ترغب في العمل عليه، مثلاً "main"

jobs:
  commit_changes:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout the repository
        uses: actions/checkout@v2

      - name: Set up Git
        run: |
          git config user.name "hanynan8"
          git config user.email "hanynan8@gmail.com"

      - name: Commit and push changes
        run: |
          git add .
          git commit -m "Auto commit changes"
          git push
